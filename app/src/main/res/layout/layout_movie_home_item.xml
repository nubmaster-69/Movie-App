<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginVertical="8dp"
    android:layout_marginStart="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@color/semi_black">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imv_movie_cover_image"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:src="@drawable/bg"
            app:riv_corner_radius="12dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to train your dragon"
            android:maxLines="1"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:textSize="@dimen/_14ssp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_movie_release_year"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="30 Nov 2022"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/tv_movie_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_round_star"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>